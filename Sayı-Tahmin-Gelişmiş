import random
tahmin_edilecek_sayılar = random.randint(0, 30)
kullanıcı_tahmin = int(input("Tahminizi giriniz: "))
while tahmin_edilecek_sayılar!=kullanıcı_tahmin:
    kullanıcı_tahmin = int(input("Tahminizi giriniz: "))
    if tahmin_edilecek_sayılar==kullanıcı_tahmin:
        print("Doğru bildiniz.")
    if tahmin_edilecek_sayılar != kullanıcı_tahmin:
        if tahmin_edilecek_sayılar > kullanıcı_tahmin:
            print("Tahmininiz yanlıştır, sayı daha büyük.")
        if tahmin_edilecek_sayılar < kullanıcı_tahmin:
            print("Tahmininiz yanlıştır, sayı daha küçük.")
print("Oyun bitti, çıkılıyor")
